<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PracticaFundamentosAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PracticaFundamentosAndroid.EditText" parent="Theme.PracticaFundamentosAndroid">
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:ems">10</item>
        <item name="android:elevation">2sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="Theme.PracticaFundamentosAndroid" parent="Base.Theme.PracticaFundamentosAndroid" ></style>
    <style name="Theme.PracticaFundamentosAndroid.TextViewTitle" parent="Theme.PracticaFundamentosAndroid">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">2sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.PracticaFundamentosAndroid.TextViewHeroName" parent="Theme.PracticaFundamentosAndroid">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">2sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.PracticaFundamentosAndroid.Container" parent="Theme.PracticaFundamentosAndroid">

        <item name="android:paddingHorizontal">@dimen/margin_medium</item>
        <item name="android:paddingVertical">@dimen/margin_large</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <style name="Theme.PracticaFundamentosAndroid.ItemContainer" parent="Theme.PracticaFundamentosAndroid.Container">

        <item name="android:paddingHorizontal">@dimen/margin_medium</item>
        <item name="android:paddingVertical">@dimen/margin_medium</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:layout_marginVertical">@dimen/margin_small</item>
    </style>

    <style name="Theme.PracticaFundamentosAndroid.Button" parent="Theme.PracticaFundamentosAndroid">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.PracticaFundamentosAndroid.Cards" parent="Theme.PracticaFundamentosAndroid">
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/black</item>
    </style>
</resources>